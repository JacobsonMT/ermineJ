	<repositories>
		<repository>
			<id>central</id>
			<name>central</name>
			<url>http://repo1.maven.org/maven2/</url>
			<layout>default</layout>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
		</repository>
		<repository>
			<id>pavlab</id>
			<name>PavLab</name>
			<url>
				http://www.chibi.ubc.ca/maven2
			</url>
			<layout>default</layout>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
		</repository>
	</repositories>
	<build>
		<directory>target</directory>
		<outputDirectory>target/classes</outputDirectory>
		<finalName>${project.artifactId}-${project.version}</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test</testSourceDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>${basedir}/src/test</directory>
				<excludes>
					<exclude>**/*</exclude>
				</excludes>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>${basedir}/src/test</directory>
				<includes>
					<include>**/*.txt</include>
					<include>**/*.xml</include>
					<include>**/*.csv</include>
					<include>**/*.zip</include>
					<include>**/*.gz</include>
					<include>**/*.settings</include>
					<include>**/*.gold</include>
					<include>**/*.properties</include>
					<include>**/*.R</include>
					<include>**/*.json</include>
				</includes>
				<filtering>false</filtering>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>osxappbundle-maven-plugin</artifactId>
				<version>1.0-alpha-2</version>
				<configuration>
					<bundleName>ermineJ</bundleName>
					<mainClass>ubic.erminej.ErmineJGui</mainClass>
					<javaApplicationStub>${basedir}/src/main/osx/JavaApplicationStub</javaApplicationStub>
					<jvmVersion>1.6+</jvmVersion>
					<vmOptions>-Xmx1g</vmOptions>
					<iconFile>${basedir}/src/main/osx/icon.icns</iconFile>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<argLine>-enableassertions -Xmx512m -Djava.awt.headless=true</argLine>
					<reportsDirectory>target/surefire-reports</reportsDirectory>
					<includes>
						<include>**/Test*.java</include>
						<include>**/*Test.java</include>
					</includes>
					<excludes>
						<exclude>**/Abstract*.java</exclude>
						<exclude>**/gui/*</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<quiet>true</quiet>
					<links>
						<link>http://docs.oracle.com/javase/6/docs/api</link>
						<link>http://dsd.lbl.gov/~hoschek/colt/api/</link>
						<link>http://commons.apache.org/proper/commons-collections/javadocs/api-release/</link>
						<link>http://commons.apache.org/proper/commons-lang/javadocs/api-3.1</link>
						<limk>http://chibi.ubc.ca/faculty/pavlidis/basecode/apidocs</limk>
					</links>
					<stylesheetfile>${basedir}/src/main/javadoc/stylesheet.css</stylesheetfile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>surefire-report-maven-plugin</artifactId>
				<version>2.0-beta-1</version>
			</plugin>
			<!-- <plugin> <groupId>org.codehaus.mojo</groupId> <artifactId>buildnumber-maven-plugin</artifactId> <executions> <execution> 
				<phase>initialize</phase> <goals> <goal>create</goal> </goals> </execution> </executions> <configuration> <doCheck>false</doCheck> 
				<doUpdate>false</doUpdate> <timestampFormat>{0, date, yyyy-MM-dd HH:mm:ss}</timestampFormat> </configuration> </plugin> -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<configuration>
					<tasks>
						<echo message="Unpacking bundle ${project.build.directory}/${project.artifactId}-${project.version}-generic-bundle.zip" />
						<unzip src="${project.build.directory}/${project.artifactId}-${project.version}-generic-bundle.zip" dest="${project.build.directory}" />
						<copy todir="${project.build.directory}/staging/lib">
							<fileset dir="${project.build.directory}/${project.artifactId}-${project.version}/lib">
								<include name="ermineJ.jar" />
								<include name="forehead.jar" />
								<include name="baseCode.jar" />
								<include name="colt.jar" />
								<include name="commons-beanutils.jar" />
								<include name="commons-lang3.jar" />
								<include name="commons-configuration.jar" />
								<include name="commons-collections.jar" />
								<include name="commons-cli.jar" />
								<include name="commons-io.jar" />
								<include name="commons-logging.jar" />
								<include name="commons-math3.jar" />
								<include name="mtj.jar" />
								<include name="xercesImpl.jar" />
								<include name="jfreechart.jar" />
								<include name="jsontools-core.jar" />
								<include name="jcommon.jar" />
								<include name="antlr.jar" />
								<include name="log4j.jar" />
								<include name="opencsv.jar" />
								<include name="slf4j-log4j12.jar" />
								<include name="slf4j-api.jar" />
							</fileset>
						</copy>
						<copy todir="${project.build.directory}/staging/bin">
							<fileset dir="${project.build.directory}/${project.artifactId}-${project.version}/bin">
								<include name="**" />
							</fileset>
						</copy>
						<copy file="${basedir}/src/main/izpack/LICENSE.txt" todir="${project.build.directory}/staging" />
						<copy file="${basedir}/src/main/izpack/README.txt" todir="${project.build.directory}/staging" />
						<echo message="${project.version}" file="${basedir}/src/main/resources/ubic/erminej/version" />
					</tasks>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>nsis-maven-plugin</artifactId>
				<inherited>false</inherited>
				<version>1.0-PRE</version>
				<configuration>
					<setupScript>${basedir}/src/main/nsis/ermineJ-setup.nsi</setupScript>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-2</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>bin-assemble</id>
						<phase>package</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bin-assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
					<execution>
						<id>src-assemble</id>
						<phase>package</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<descriptorRefs>
								<descriptorRef>src</descriptorRef>
							</descriptorRefs>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- See http://mojo.codehaus.org/webstart/webstart-maven-plugin/jnlp-mojos-overview.html -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-3</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<!-- <phase>package</phase> -->
						<goals>
							<goal>jnlp-inline</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<jnlp>
						<outputFile>ermineJ.jnlp</outputFile>
						<mainClass>ubic.erminej.ErmineJGui</mainClass>
						<inputTemplate>src/main/jnlp/template.vm</inputTemplate>
					</jnlp>
					<!-- <excludeTransitive>true</excludeTransitive> -->
					<sign>
						<keystore>~/.keystore</keystore>
						<keypass>${jarpass}</keypass>
						<storepass>${jarpass}</storepass>
						<alias>pavlab</alias>
						<keystoreConfig>
							<delete>false</delete>
							<gen>false</gen>
						</keystoreConfig>
					</sign>
					<unsignAlreadySignedJars>true</unsignAlreadySignedJars>
					<unsign>true</unsign> <!-- old? -->
					<pack200>false</pack200>
					<gzip>true</gzip>
					<verbose>true</verbose>
					<verifyjar>true</verifyjar>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>keytool-maven-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<goals>
							<goal>generateKeyPair</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>~/.keystore</keystore>
					<storepass>${jarpass}</storepass>
					<keypass>${jarpass}</keypass>
					<alias>pavlab</alias>
					<dname>cn=erminej.chibi.ubc.ca, ou=PavlidisLab, L=Vancouver, ST=BC, o=CHiBi, c=CA</dname>
					<validity>1800</validity>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.izpack</groupId>
				<artifactId>izpack-maven-plugin</artifactId>
				<version>5.0.0-beta8</version>
				<configuration>
					<izpackBasedir>${project.build.directory}/${project.artifactId}-${project.version}</izpackBasedir>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh-external</artifactId>
				<version>1.0-beta-6</version>
			</extension>
		</extensions>
	</build>
	<profiles>
		<profile>
			<!-- For deployment where host is local (and ssh isn't available for builder, e.g. CI) -->
			<id>local-deploy</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>deploy.local</name>
				</property>
			</activation>
			<distributionManagement>
				<repository>
					<id>repo</id>
					<name>Pavlab</name>
					<url>file:///space/maven2</url>
				</repository>
				<snapshotRepository>
					<id>repo</id>
					<name>Pavlab</name>
					<url>file:///space/maven2</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>
